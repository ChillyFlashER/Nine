<MergedParticleEffectContent xmlns="http://schemas.microsoft.com/nine/2011/xaml">

    <ParticleEffectContent ParticleType="ConstrainedBillboard" Stretch="10" Texture="Textures\flake" DepthSortEnabled="True" BlendState="Additive">
        <ParticleEffectContent.Emitter>
            <PointEmitterContent Emission="100" Duration="2" Color="255, 255, 255, 255" Size="0.2" Speed="8" />
        </ParticleEffectContent.Emitter>
        
        <ColorControllerContent EndColor="255, 0, 255, 255 ~ 255, 255, 0, 255" />
        <FadeControllerContent />
    </ParticleEffectContent>

    <ParticleEffectContent ParticleType="ConstrainedBillboard" Stretch="10" Texture="Textures\fire" BlendState="Additive">
        <ParticleEffectContent.Emitter>
            <PointEmitterContent Emission="100" Duration="2" Color="255, 255, 255, 255" Size="0.2" Speed="8" />
        </ParticleEffectContent.Emitter>
        
        <ColorControllerContent EndColor="255, 0, 255, 255 ~ 255, 255, 0, 255" />
        <FadeControllerContent />
    </ParticleEffectContent>

</MergedParticleEffectContent>