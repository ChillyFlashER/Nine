fragment PositionTransform;

[parameters]
float3x3 TextureTransform;

[vs]
__hlsl__
void main(INPUT input, inout OUTPUT output)
{
	float2 uv;
	import(TexCoord, uv = TexCoord);
	
	uv = mul(uv, TextureTransform);
	export(float2, TexCoord, uv);
}
__hlsl__