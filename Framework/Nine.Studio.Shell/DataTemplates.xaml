<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Nine.Studio.Shell.Converters">

    <Style x:Key="NewItemContainerStyle" TargetType="MenuItem">
        <Setter Property="Header" Value="{Binding DocumentType.DisplayName}"/>
        <Setter Property="Icon" Value="{Binding DocumentType.Icon, Converter={StaticResource IconConverter}}"/>
        <Setter Property="ToolTip" Value="{Binding DocumentType.Description}"/>
        <Setter Property="Command" Value="{Binding NewCommand}"/>
    </Style>
    <Style x:Key="ImportersContainerStyle" TargetType="MenuItem">
        <Setter Property="Header" Value="{Binding DocumentSerializer.DisplayName}"/>
        <Setter Property="Command" Value="{Binding ImportCommand}"/>
    </Style>
    <Style x:Key="ExportersContainerStyle" TargetType="MenuItem">
        <Setter Property="Header" Value="{Binding DocumentSerializer.DisplayName}"/>
        <Setter Property="Command" Value="{Binding ExportCommand}"/>
    </Style>
    
</ResourceDictionary>