<Scene xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <TMPCamera2D />

    <Window>
        <Grid>
            <!--<Grid.RowDefinitions>
                <RowDefinitions Height="400" />
                <RowDefinitions Height="400" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinition>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinition>-->

            <!-- Borders -->
            <Grid Grid.Column="0" Grid.Row="0">
                <!--<Grid.RowDefinitions>
                    <RowDefinitions Height="50*" />
                    <RowDefinitions Height="50*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinition>
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinition>-->
                <Border Grid.Row="0" Grid.Column="0" BorderThickness="10">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="1,0,0" />
                    </Border.BorderBrush>
                </Border>
                <Border Grid.Row="1" Grid.Column="0" BorderThickness="8">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="0,1,0" />
                    </Border.BorderBrush>
                    <Border.Background>
                        <ImageBrush Source="{ContentReference ../Textures/checker.bmp}" />
                    </Border.Background>
                </Border>
                <Border Grid.Row="0" Grid.Column="1" BorderThickness="6">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="0,0,1" />
                    </Border.BorderBrush>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" BorderThickness="4">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="1,1,0" />
                    </Border.BorderBrush>
                </Border>
            </Grid>
          
            <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Vertical">
                <StackPanel.Background>
                    <ImageBrush Source="{ContentReference ../Textures/checker.bmp}" />
                </StackPanel.Background>
                <Border Margin="2" Height="50" BorderThickness="2">
                    <Border.BorderBrush>
                      <SolidColorBrush Color="1,0,0" />
                    </Border.BorderBrush>
                </Border>
                <Border Margin="2" Height="50" BorderThickness="2">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="0,1,0" />
                    </Border.BorderBrush>
                    <Button Margin="2">
                        <Button.Background>
                            <SolidColorBrush Color="211,211,211" />
                        </Button.Background>
                    </Button>
                </Border>
                <Border Margin="2" Height="50" BorderThickness="2">
                    <Border.BorderBrush>
                        <SolidColorBrush Color="0,0,1" />
                    </Border.BorderBrush>
                    <ProgressBar Margin="2" Value="50" />
                </Border>
            </StackPanel>
          
            <!--<Image Grid.Column="0" Grid.Row="2" Source="{ContentReference ../Textures/box.dds}" />-->
        </Grid>
    </Window>  

</Scene>
